<!DOCTYPE html>
<html>
<head>
    <title>Edit Reservations</title>
    <link rel='stylesheet' href='/stylesheets/admin-pages.css'/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<h1 style="color: #ffffff; background: #ffcc00; text-align: center">Edit Reservations Page</h1>
<p style="color: #ffffff; background: #ffcc00; text-align: center; margin-top: -8px"><a href="/admin/dashboard">Dashboard</a></p>

<h2>Existing Reservations</h2>
<table style="border-spacing: 10px;">
    <thead>
    <tr>
        <th>Booking Id</th>
        <th>Customer Id</th>
        <th>Customer Name</th>
        <th>Branch Id</th>
        <th>Timing</th>
    </tr>
    </thead>
    <tbody>
    <% for (const { id, customer_id, name, branch_id, throughout } of reservations) { %>
        <tr>
            <td><%= id%></td>
            <td><%= customer_id%></td>
            <td><%= name%></td>
            <td><%= branch_id%></td>
            <td><%= throughout%></td>
        </tr>
    <%} %>
    </tbody>
</table>
<br>
<br>
<h2>Edit Reservation</h2>
<form action="/admin/edit_reservation" method="POST">
    <p>
        <label for="reservation-id">Reservation Id:</label>
        <input type="text" id="reservation-id" name="reservation_id" placeholder="5fe63e0f-e526-4f3c-afb7-677d8f913e22">
    </p>
    <p>
        <label for="edit-reservation-timing">New Reservation Timing:</label>
        <input type="text" id="edit-reservation-timing" name="reservation_timing" placeholder="[&quot;2010-01-01 16:30:00&quot;,&quot;2010-01-01 18:00:00&quot;)">
    </p>
    <button type="submit">Save Changes</button>
</form>
<br>
<br>
<h2>Delete Reservation</h2>
<form action="/admin/delete_reservation" method="POST">
    <p>
        <label for="reservation-id">Reservation Id:</label>
        <input type="text" id="reservation-id" name="reservation_id" placeholder="7ebc4635-aad7-427f-ab11-d9b52ab6c2503">
    </p>
    <button type="submit">Delete</button>
</form>
</html>