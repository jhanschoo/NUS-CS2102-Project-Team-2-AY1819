<!DOCTYPE html>
<html>
<head>
  <title>Edit Users</title>
  <link rel='stylesheet' href='/stylesheets/style.css'/>
  <script src="/scripts/admin_edit_users.js" defer></script>
</head>
<h2>Existing Users</h2>
<p>
  <label for="search-users">Search Users:</label>
  <input type="text" id="search-users-input" name="search_users"/>
</p>
<p>There are <span id="user-count"><%= users.length %></span> matching users.</p>
<table id="users-display" style="border-spacing: 10px;">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
  <% for (const { id, name, email } of users) { %>
    <tr>
      <td><%= id%></td>
      <td><%= name%></td>
      <td><%= email%></td>
    </tr>
  <%} %>
  </tbody>
</table>
<br>
<br>
<h2>Edit User</h2>
<form action="/admin/edit_user" method="POST">
  <p>
    <label for="user-id">User Id:</label>
    <input type="text" id="user-id" name="user_id" placeholder="7ebc4635-aad7-427f-ab11-d9b52ab6c2503">
  </p>
  <p>
    <label for="edit-user-name">New User Name (optional):</label>
    <input type="text" id="edit-user-name" name="new_user_name" placeholder="JohnSmith">
  </p>
  <p>
    <label for="edit-email">New Email (optional):</label>
    <input type="text" id="edit-password" name="new_email" placeholder="a@a.com">
  </p>
  <p>
    <label for="edit-password">New Password (optional):</label>
    <input type="password" id="edit-password" name="new_password" placeholder="">
  </p>
  <button type="submit">Save Changes</button>
</form>
<br>
<br>
<h2>Delete User</h2>
<form action="/admin/delete_user" method="POST">
  <p>
    <label for="user-id">User Id:</label>
    <input type="text" id="user-id" name="user_id" placeholder="7ebc4635-aad7-427f-ab11-d9b52ab6c2503">
  </p>
  <button type="submit">Delete</button>
</form>
<body>
</body>
</html>
